#!/bin/sh

autoreconf -fi

case `uname -s` in
    Darwin)
    export XML_CATALOG_FILES="/usr/local/etc/xml/catalog"
    FLAGS="$FLAGS --disable-zeroconf \
                  --with-docbook \
                  --with-afpstats"
    ;;
esac

./configure $FLAGS "$@" CC=gcc-10 RANLIB="ranlib -no_warning_for_no_symbols"

make clean
